.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: auto;
  min-height: 100vh;
  /* padding: 20px; */
  background: linear-gradient(135deg, #0e0e0e 0%,#0e0e0e 30%, #15141e 100%);
  padding-top: 40px; /* 为header留出空间 */
}

.header {
  flex-direction: row;
  height: 40px;
  width: 100px;
  padding: 6px 14px 2px 0px;
  display: flex;
  position: fixed;
  z-index: 9900;
  top: 10px;
  left: 0px;
  background-color: #0e0e0e;
  align-items: center;
  justify-content: center;
  /* background-color: rgb(0, 0, 0); */
  clip-path: polygon(30px 0%, 100% 0, 100% calc(100% - 48px), calc(100% - 30px) 100%, 0 100%, 0% 0px);
  /* margin-bottom: 40px; */
}

.title {
  font-size: 16px;
  font-weight: bold;
  color: #eee;
  margin-top: -10px;
}

.button-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

