/* 新增轮播图样式 */
.banner-swiper {
  width: 100%;
  height: 160px;
  border-radius: 2px;
  position: fixed; /* 改为相对定位 */
  top: 10px;
  z-index: 1000;
  box-shadow: #0e0e0e 0px 20px 30px 14px;
  /* clip-path: polygon(30px 0%, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%, 0% 30px); */
  /* border-radius: 0px 170px 0px 0px; */
}

.banner-image {
  width: 100%;
  height: 100%;
  /* border-radius: 8px; */
}

.banner-image::before{
